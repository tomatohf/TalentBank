<tr<%= %Q! class="odd"! if teacher_counter.even? %>>
	<td>
		<div>
			<%= h(teacher.uid) %>
		</div>
		
		<div>
			<% if teacher.name? %>
				<%= h(teacher.name) %>
			<% else %>
				&nbsp;
			<% end %>
		</div>
	</td>
	
	
	<td>
		<%
			["student", "resume", "revision", "statistic", "admin"].each do |field|
		%>
			<%= render :partial => "permission_field", :locals => {:teacher => teacher, :field => field} %>
		<% end %>
	</td>
</tr>
	