<tr id="teacher_row_<%= teacher.id %>" class="teacher_row">
	<% uid = h(teacher.uid) %>
	
	<td>
		<%= uid %>
	</td>
	
	<td>
		<%= h(teacher.name) %>
	</td>
	
	<td>
		<%= render :partial => "admin_field", :locals => {:teacher => teacher} %>
	</td>
	
	<td>
		<%= render :partial => "statistic_field", :locals => {:teacher => teacher} %>
	</td>
	
	<td align="right">
		<a href="#" title="删除" class="none" onclick="del_teacher(<%= teacher.id %>, '<%= a(uid) %>'); return false;">
			<img src="/images/teachers/delete_icon.gif" border="0" alt="删除" />
			删除</a>
	</td>
</tr>
	