<% talent_page_title("技能和证书") %>


<h2>技能和证书</h2>

<% if flash[:error_msg] %>
	<p class="error_msg">
	    <%= flash[:error_msg] %>
	</p>
<% end %>

<div class="float_r">
	<%= render :partial => "skill_pool", :locals => {:selected_ids => @selected_skill_ids} %>
</div>

<div style="margin-right: 280px;">
	<div class="info_with_icon">
		从右侧列表中选择添加你要填写的技能和证书
	</div>
	
	<br />
	
	<% form_tag "/students/#{@student.id}/update_skills", :method => :post do %>

		<table border="0" cellspacing="10" cellpadding="5" style="font-size: 13px;">
			<tbody id="skill_rows">
				<%= render :partial => "student_skill", :collection => @student_skills %>

				<tr>
					<td>

					</td>

					<td colspan="2">
						<%= submit_tag "保存", :class => "button", :disabled => !@account_active %>
					</td>
				</tr>
			</tbody>
		</table>

	<% end %>
</div>

<div class="clear_r"></div>


<script src="/lib/jquery/jquery-1.3.2.min.js" type="text/javascript" language="JavaScript"></script>
<script language="JavaScript">
	var STUDENT_ID = <%= @student.id %>;
</script>
<script src="/javascripts/students/skill_pool.js" type="text/javascript" language="JavaScript"></script>
