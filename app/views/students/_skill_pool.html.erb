<%
	selected_ids ||= []
	
	skills = Skill.data
	selected_skills = []
	unselected_skills = []
	skills.each do |skill|
		if selected_ids.include?(skill[:id])
			selected_skills << skill
			selected_ids.delete(skill[:id])
		else
			unselected_skills << skill
		end
	end
%>


<div class="skill_pool">
	<% selected_skills.each do |skill| %>
		<div class="selected_skill" id="selected_skill_<%= skill[:id] %>">
			<%= skill[:name] %>
		</div>
	<% end %>
	
	<div class="skill_pool_sep_line"></div>
	
	<% unselected_skills.each do |skill| %>
		<a href="#" class="unselected_skill" onclick="add_skill(<%= skill[:id] %>, this); return false;">
			<%= skill[:name] %></a>
	<% end %>
</div>
