<table border="0" cellspacing="10" cellpadding="5" style="font-size: 14px;">
	<tr>
		<td style="width: 100px;">
			<label for="phone">
				电话<%= required_mark %>
			</label>
		</td>
		
		<td>
			<input type="text" id="phone" name="phone" class="text_field" size="30" value="<%= h(@profile.phone) %>" />
		</td>
	</tr>
	
	<tr>
		<td>
			<label for="email">
				电子邮件<%= required_mark %>
			</label>
		</td>
		
		<td>
			<input type="text" id="email" name="email" class="text_field" size="30" value="<%= h(@profile.email) %>" />
		</td>
	</tr>
	
	<tr>
		<td>
			<label for="address">
				地址
			</label>
		</td>
		
		<td>
			<input type="text" id="address" name="address" class="text_field" size="30" value="<%= h(@profile.address) %>" />
		</td>
	</tr>
	
	<tr>
		<td>
			<label for="zip">
				邮编
			</label>
		</td>
		
		<td>
			<input type="text" id="zip" name="zip" class="text_field" size="30" value="<%= h(@profile.zip) %>" />
		</td>
	</tr>
	
	<tr>
		<td>
			<label for="gender">
				性别
			</label>
		</td>
		
		<td>
			<select name="gender" id="gender" class="dropdown_list">
				<option value=""<%= %Q! selected="selected"! if @profile.gender.nil? %>></option>
				<option value="true"<%= %Q! selected="selected"! if @profile.gender == true %>>男 - ♂</option>
				<option value="false"<%= %Q! selected="selected"! if @profile.gender == false %>>女 - ♀</option>
			</select>
		</td>
	</tr>
	
	<tr>
		<td>
			<label for="political_status">
				政治面貌
			</label>
		</td>
		
		<td>
			<select name="political_status" id="political_status" class="dropdown_list">
				<option value=""<%= %Q! selected="selected"! if @profile.political_status_id.blank? %>></option>
				<% PoliticalStatus.data.each do |status| %>
					<option value="<%= status[:id] %>"<%= %Q! selected="selected"! if @profile.political_status_id == status[:id] %>><%= status[:name] %></option>
				<% end %>
			</select>
		</td>
	</tr>
	
	<tr>
		<td>
			
		</td>
		
		<td style="padding-top: 25px;">
			<%= submit_tag submit_label, :class => "button", :disabled => !@account_active %>
		</td>
	</tr>
</table>
