<% domain = ResumeDomain.find(@resume.domain_id)[:name] %>
<% talent_page_title("编辑 #{domain} 的简历") %>

<link href="/stylesheets/dropdown_menu.css" rel="stylesheet" type="text/css" />


<h2>编辑 <%= domain %> 的简历</h2>

<%= render :partial => "/resumes/edit_resume_nav", :locals => {:current_link => "resume_exp_sections"} %>

<% if flash[:success_msg] %>
	<p class="success_msg">
	    <%= flash[:success_msg] %>
	</p>
<% end %>

<div>
	<a href="/students/<%= @student.id %>/resumes/<%= @resume.id %>/resume_exp_sections/new">
		添加经历块</a>
</div>

<div>
	<% form_tag "", :method => :delete, :id => "del_section_form" do %>
	<% end %>
	<% form_tag "", :method => :delete, :id => "del_exp_form" do %>
	<% end %>
	
	<div>
		<%= render :partial => "section", :collection => @sections %>
	</div>
</div>


<script src="/lib/jquery/jquery-1.3.2.min.js" type="text/javascript" language="JavaScript"></script>
<script language="JavaScript">
	var STUDENT_ID = <%= @student.id %>;
	var RESUME_ID = <%= @resume.id %>;
</script>
<script src="/javascripts/resumes/exps.js" type="text/javascript" language="JavaScript"></script>
