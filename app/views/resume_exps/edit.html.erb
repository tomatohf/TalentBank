<% section_title = h(@section.title) %>
<% talent_page_title("编辑 #{section_title} 中的经历") %>


<h2>编辑 <%= section_title %> 中的经历</h2>

<% if flash[:error_msg] %>
	<p class="error_msg">
	    <%= flash[:error_msg] %>
	</p>
<% end %>
<% if @exp.errors.size > 0 %>
	<p class="error_msg">
		<%= list_model_validate_errors(@exp) %>
	</p>
<% end %>

<% form_tag "/students/#{@student.id}/resumes/#{@resume.id}/exp_sections/#{@section.id}/exps/#{@exp.id}", :method => :put do %>

	<%= render :partial => "exp_form", :locals => {:submit_label => "修改"} %>
	
<% end %>
