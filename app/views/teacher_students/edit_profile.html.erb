<%
	student_name = h(@student.get_name)
	page_title = "编辑学生 #{student_name} 的信息"

	talent_page_title(page_title)
%>


<div class="float_r" style="word-spacing: 20px; margin: 12px 25px 0px;">
	<a href="/teachers/<%= @teacher.id %>/students/<%= @student.id %>">
		查看学生资料</a>
</div>
<h2 class="page_title"><%= page_title %></h2>

<%= render :partial => "edit_nav", :locals => {:current_link => "edit_profile"} %>

<% if flash[:success_msg] %>
	<p class="success_msg">
	    <%= flash[:success_msg] %>
	</p>
<% end %>
<% if flash[:error_msg] %>
	<p class="error_msg">
	    <%= flash[:error_msg] %>
	</p>
<% end %>
<% if @profile.errors.size > 0 %>
	<p class="error_msg">
		<%= list_model_validate_errors(@profile) %>
	</p>
<% end %>

<% form_tag "/teachers/#{@teacher.id}/students/#{@student.id}/update_profile", :method => :post do %>

	<%= render :partial => "/students/profile_form", :locals => {:submit_label => "保存学生信息"} %>
	
<% end %>
