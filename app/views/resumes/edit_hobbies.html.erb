<% domain = ResumeDomain.find(@resume.domain_id)[:name] %>
<% talent_page_title("编辑 #{domain} 的简历") %>


<h2>编辑 <%= domain %> 的简历</h2>

<%= render :partial => "edit_resume_nav", :locals => {:current_link => "edit_hobbies"} %>

<% if flash[:success_msg] %>
	<p class="success_msg">
	    <%= flash[:success_msg] %>
	</p>
<% end %>
<% if flash[:error_msg] %>
	<p class="error_msg">
	    <%= flash[:error_msg] %>
	</p>
<% end %>
<% if @hobby.errors.size > 0 %>
	<p class="error_msg">
		<%= list_model_validate_errors(@hobby) %>
	</p>
<% end %>

<% form_tag "/students/#{@student.id}/resumes/#{@resume.id}/update_hobbies", :method => :post do %>

	<table border="0" cellspacing="10" cellpadding="5" style="font-size: 14px;">
		<tr>
			<td valign="top" style="width: 75px;">
				<label for="hobbies">
					特长和爱好
				</label>
			</td>
			
			<td>
				<textarea id="hobbies" name="hobbies" class="text_field" cols="50" rows="8"><%= @hobby.content %></textarea>
			</td>
		</tr>
		
		<tr>
			<td>
				
			</td>
			
			<td>
				<%= submit_tag "修改", :class => "button", :disabled => !@account_active %>
				
				<span class="info_with_icon" style="margin-left: 20px; font-size: 12px;">
					每行输入一条
				</span>
			</td>
		</tr>
	</table>
	
<% end %>
