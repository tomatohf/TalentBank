<% talent_page_title("教育经历") %>


<h2 class="page_title">简历基本信息 - 教育经历</h2>

<%= render :partial => "/students/edit_nav", :locals => {:current_link => "edu_exps"} %>


<% if flash[:success_msg] %>
	<p class="success_msg">
	    <%= flash[:success_msg] %>
	</p>
<% end %>

<div class="align_r" style="margin-right: 30px;">
	<a href="/students/<%= @student.id %>/edu_exps/new" class="button">
		添加教育经历</a>
</div>

<div>
	<% form_tag "", :method => :delete, :id => "del_exp_form" do %>
	<% end %>
	<script type="text/javascript">
		function del_exp(exp_id, exp_period) {
			if(confirm("确定要删除 " + exp_period + " 的教育经历么 ?")) {
				del_form = document.getElementById("del_exp_form");
				del_form.action = "/students/<%= @student.id %>/edu_exps/" + exp_id;
				del_form.submit();
			}
		}
	</script>
	
	<table border="0" cellspacing="0" cellpadding="0" class="main_part_w list" style="font-size: 14px;">
		<thead>
			<tr>
				<td style="width: 125px;">时间段</td>
				<td>大学</td>
				<td>学院</td>
				<td>专业</td>
				<td>教育类型</td>
				<td style="width: 50px;"></td>
				<td style="width: 50px;"></td>
			</tr>
		</thead>
		
		<tbody>
			<%= render :partial => "exp", :collection => @exps %>
		</tbody>
	</table>
</div>
