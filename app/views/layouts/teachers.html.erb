<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="zh-CN" lang="zh-CN">
    <head>
        <meta http-equiv="content-type" content="text/html;charset=UTF-8"/>
		
		<% page_title = yield(:page_title) %>
		<title><%= @school.page_title(page_title) %></title>
		<%= stylesheet_link_tag("site") %>
    </head>
    <body>
	
		<div class="page_container">
			
			<div class="float_l" style="width: 200px;">

				<div>
					<a href="/teachers/<%= @teacher.id %>">
						首页</a>
				</div>
				
				<div>
					<a href="/teachers/<%= @teacher.id %>/edit_password">
						修改密码</a>
				</div>
				
				<div>
					<a href="/teachers/<%= @teacher.id %>/edit">
						修改信息</a>
				</div>
				
				<div>
					<a href="/teachers/<%= @teacher.id %>/teach_students">
						查询学生</a>
				</div>
				
				<% if @teacher.admin %>
					<div>
						<a href="/teachers/<%= @teacher.id %>/corporations">
							查询企业</a>
					</div>
				<% end %>
				
				<% if @teacher.statistic %>
					<div>
						<a href="/teachers/<%= @teacher.id %>/viewed_resume_statistics">
							简历查看统计</a>
					</div>
					
					<div>
						<a href="/teachers/<%= @teacher.id %>/query_statistics">
							企业查询统计</a>
					</div>
				<% end %>
				
				<div>
					<a href="/index/logout">
						退出系统</a>
				</div>

			</div>

			<div style="margin-left: 200px;">
				<%= yield %>
			</div>

			<div class="clear_l"></div>
			
		</div>
		
		<% school_abbr = @school.abbr %>
		<%= render_school_view("/common/bottom_line", school_abbr) %>

		
		
		<%= render_school_view("/common/page_track", school_abbr) if Rails.env.production? %>
    </body>
</html>
