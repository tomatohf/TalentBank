<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="zh-CN" lang="zh-CN">
    <head>
        <meta http-equiv="content-type" content="text/html;charset=UTF-8"/>
		
		<% page_title = yield(:page_title) %>
		<title><%= @school.page_title(page_title) %></title>
		<%= stylesheet_link_tag("site") %>
    </head>
    <body>
	
		<% school_abbr = @school.abbr %>
		<div class="page_container">
			
			<%= render_school_view("/common/banner", school_abbr, :account_type => "teachers") %>
			
			<div class="menu_banner" style="background-color: #0259A0;">
				<div class="float_l">
					<span><%= format_zh_date(Time.now) %></span>
					<span style="margin-left: 60px;"><%= @teacher.get_name %>老师 欢迎您 !</span>
				</div>
				
				<div class="float_r">
					<a href="/teachers/<%= @teacher.id %>">
						首页</a>
					
					<a href="#">
						消息</a>
							
					<a href="#">
						设置</a>
					
					<a href="#">
						帮助</a>
							
					<a href="/index/logout">
						退出</a>
				</div>
			</div>
			
			
			<div class="menu_column">

				<div class="menu_category">
					<div class="menu_category_title" style="background-image: url(/images/teachers/student_management.gif);">
						学生管理
					</div>
					<div class="sep_line"></div>
					<div class="menu_category_body">
						
					</div>
				</div>
				
				
				<div>
					<a href="/teachers/<%= @teacher.id %>">
						首页</a>
				</div>
				
				<div>
					<a href="/teachers/<%= @teacher.id %>/edit_password">
						修改密码</a>
				</div>
				
				<div>
					<a href="/teachers/<%= @teacher.id %>/edit">
						修改信息</a>
				</div>
				
				<% if @teacher.resume %>
					<div>
						<a href="/teachers/<%= @teacher.id %>/students">
							查询学生</a>
					</div>
				<% end %>
				
				<% if @teacher.admin %>
					<div>
						<a href="/teachers/<%= @teacher.id %>/corporations">
							查询企业</a>
					</div>
				<% end %>
				
				<% if @teacher.statistic %>
					<div>
						<a href="/teachers/<%= @teacher.id %>/statistics">
							简历数据统计</a>
					</div>
					
					<div style="padding-left: 15px;">
						<a href="/teachers/<%= @teacher.id %>/statistics/college">
							简历查看统计</a>
					</div>
					
					<div style="padding-left: 15px;">
						<a href="/teachers/<%= @teacher.id %>/statistics/querying_corp">
							搜索操作统计</a>
					</div>
					
					<div style="padding-left: 15px;">
						<a href="/teachers/<%= @teacher.id %>/statistics/querying">
							最近操作列表</a>
					</div>
				<% end %>
				
				<div>
					<a href="/index/logout">
						退出系统</a>
				</div>

			</div>

			<div style="margin-left: 200px;">
				<%= yield %>
			</div>

			<div class="clear_l"></div>
			
		</div>
		
		<%= render_school_view("/common/bottom_line", school_abbr) %>

		
		
		<%= render_school_view("/common/page_track", school_abbr) if Rails.env.production? %>
    </body>
</html>
