<tr onmouseover="this.style.backgroundColor='#F8F8F8';" onmouseout="this.style.backgroundColor='#FFFFFF';">
	<td>
		<a target="_blank" href="/teachers/<%= @teacher.id %>/corporations/<%= corporation.id %>" class="none">
			<%= h(corporation.uid) %></a>
	</td>
	
	<td>
		<a target="_blank" href="/teachers/<%= @teacher.id %>/corporations/<%= corporation.id %>" class="none">
			<%= h(corporation.name) %></a>
	</td>
	
	<td align="center">
		<%= render :partial => "allow_query_field", :locals => {:corporation => corporation} %>
	</td>
	
	<td align="center">
		<a href="#" title="查看企业的数据统计" class="none operation_link">
			<img src="/images/teachers/statistic_icon.png" border="0" alt="数据统计" />
			数据统计</a>
			
		<div class="dropdown_menu" style="font-size: 12px; text-align: left;">
			<ul class="dropdown_sub_menu">
				<% TeacherStatisticsController::Perspectives.each do |perspective| %>
					<li>
						<a href="/teachers/<%= @teacher.id %>/statistics<%= perspective[0] %>?corp=<%= corporation.id %>">
							<%= perspective[1] %></a>
					</li>
				<% end %>
			</ul>
		</div>
	</td>
	
	<td></td>
</tr>
