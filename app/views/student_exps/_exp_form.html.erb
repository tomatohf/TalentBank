<table border="0" cellspacing="10" cellpadding="5">
	<tr>
		<td style="width: 100px;">
			<label for="period">
				时间段<%= required_mark %>
			</label>
		</td>
		
		<td>
			<input type="text" id="period" name="period" class="text_field" size="30" value="<%= h(@exp.period) %>" />
			
			<span class="info_with_icon" style="margin-left: 10px;">
				例如: 2008.08 - 2009.09
			</span>
		</td>
	</tr>
	
	<tr>
		<td>
			<label for="title">
				标题<%= required_mark %>
			</label>
		</td>
		
		<td>
			<input type="text" id="title" name="title" class="text_field" size="30" value="<%= h(@exp.title) %>" />
			
			<span class="info_with_icon" style="margin-left: 10px;">
				可填写 协会 / 公司 / 项目 ... 等
			</span>
		</td>
	</tr>
	
	<tr>
		<td>
			<label for="sub_title">
				子标题
			</label>
		</td>
		
		<td>
			<input type="text" id="sub_title" name="sub_title" class="text_field" size="30" value="<%= h(@exp.sub_title) %>" />
			
			<span class="info_with_icon" style="margin-left: 10px;">
				可填写 部门 / 职务 ... 等
			</span>
		</td>
	</tr>
	
	<tr>
		<td valign="top">
			<label for="content">
				内容<%= required_mark %>
			</label>
		</td>
		
		<td>
			<textarea id="content" name="content" class="text_field" cols="50" rows="8"><%= @exp.content %></textarea>
			
			<div class="info_with_icon" style="margin-top: 10px;">
				每行输入一条
			</div>
		</td>
	</tr>
	
	<tr>
		<td>
			
		</td>
		
		<td>
			<%= submit_tag submit_label, :class => "button", :disabled => !@account_active %>
			&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
			<a href="/students/<%= @student.id %>/exps">
				返回经历库</a>
		</td>
	</tr>
</table>
